.container {
  padding-bottom: 40rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
}

.placeholder {
  width: 40rpx;
}

.content {
  padding: 140rpx 30rpx 30rpx;
}

.section {
  margin-bottom: 40rpx;
  background-color: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.file-chooser {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  background-color: #f9f9f9;
}

.file-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.file-icon-plus {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  opacity: 0.5;
}

.file-name {
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.choose-tip {
  font-size: 28rpx;
  color: #999;
}

.title-input {
  font-size: 32rpx;
  padding: 10rpx 0;
  border-bottom: 2rpx solid #eee;
}

.tag-input-container {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.tag-input {
  flex: 1;
  font-size: 28rpx;
  padding: 10rpx 0;
  border-bottom: 2rpx solid #eee;
}

.add-tag-btn {
  margin-left: 20rpx;
  font-size: 26rpx;
  padding: 0 20rpx;
}

.tags-container {
  margin-top: 20rpx;
}

.added-tags-title {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

.tag-item {
  display: inline-flex;
  align-items: center;
  background-color: #e6f3ff;
  color: #3370ff;
  padding: 8rpx 20rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
  margin-bottom: 15rpx;
  font-size: 26rpx;
}

.tag-remove {
  margin-left: 10rpx;
  font-size: 32rpx;
  line-height: 1;
}

.upload-btn {
  margin-top: 60rpx;
  font-size: 32rpx;
  padding: 20rpx;
  background-color: #3370ff;
}

.upload-btn:active {
  background-color: #295ef2;
}

/* 调试按钮样式 */
.debug-btn {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  background-color: #f0f0f0;
  color: #666;
}

/* 上传提示样式 */
.upload-tip {
  text-align: center;
  color: #ff6b6b;
  font-size: 26rpx;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  padding: 10rpx;
  background-color: #fff5f5;
  border-radius: 8rpx;
  border: 1rpx solid #ffd7d7;
}