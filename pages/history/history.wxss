/* ================= Container ================= */
.container {
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #faf7f9 0%, #f5f2f6 100%);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* ================= Header ================= */
.header {
  background: rgba(255, 255, 255, 0.95);
  padding: 35rpx 30rpx;
  border-radius: 25rpx;
  margin-bottom: 35rpx;
  box-shadow: 0 4rpx 16rpx rgba(140, 123, 157, 0.08);
  border: 2rpx solid #f0ebf5;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header-content {
  display: flex;
  align-items: center;
}

.header-icon {
  font-size: 38rpx;
  margin-right: 20rpx;
  color: #7d6b8f;
}

.header-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #7d6b8f;
  letter-spacing: 0.5rpx;
}

.history-count {
  background: rgba(184, 167, 204, 0.15);
  color: #7d6b8f;
  padding: 12rpx 24rpx;
  border-radius: 25rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: 1.5rpx solid rgba(184, 167, 204, 0.3);
}

/* ================= Content ================= */
.content {
  flex: 1;
}

/* ================= Stats Container ================= */

.stats-container {
  display: flex;
  justify-content: space-between;
  margin-bottom: 45rpx;
  gap: 20rpx;
}

.stat-card {
  flex: 1; /* 三等分 */
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx 25rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(140, 123, 157, 0.08);
  border: 2rpx solid #f0ebf5;
  transition: all 0.3s ease;
}


.stat-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(140, 123, 157, 0.12);
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #b8a7cc;
  display: block;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #8c7b9d;
  display: block;
  font-weight: 500;
}

/* ================= Section Title ================= */
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #7d6b8f;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  letter-spacing: 0.5rpx;
  padding: 0 10rpx;
}

.section-icon {
  margin-right: 16rpx;
  font-size: 32rpx;
}

/* ================= Cycle History List ================= */
.cycle-history-list {
  margin-bottom: 40rpx;
}

.cycle-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx 25rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(140, 123, 157, 0.08);
  border: 2rpx solid #f0ebf5;
  transition: all 0.3s ease;
}

.cycle-item:active {
  background: rgba(255, 255, 255, 0.98);
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(140, 123, 157, 0.12);
}

.cycle-icon {
  font-size: 38rpx;
  margin-right: 20rpx;
  color: #b8a7cc;
}

.cycle-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.cycle-days {
  font-size: 30rpx;
  font-weight: 600;
  color: #7d6b8f;
  margin-bottom: 8rpx;
}

.cycle-date {
  font-size: 26rpx;
  color: #8c7b9d;
  font-weight: 500;
}

.period-length {
  background: rgba(173, 216, 230, 0.2);
  color: #5a8b9e;
  padding: 10rpx 20rpx;
  border-radius: 18rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: 1.5rpx solid rgba(173, 216, 230, 0.3);
}

/* ================= History List ================= */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 18rpx;
  margin-bottom: 40rpx;
}

.history-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 28rpx 25rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(140, 123, 157, 0.08);
  border: 2rpx solid #f0ebf5;
  transition: all 0.3s ease;
}

.history-item:active {
  background: rgba(255, 255, 255, 0.98);
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(140, 123, 157, 0.12);
}

.item-icon {
  color: #b8a7cc;
  margin-right: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.item-date {
  font-size: 30rpx;
  font-weight: 500;
  color: #7d6b8f;
  flex: 1;
}

.item-days {
  background: rgba(244, 174, 186, 0.15);
  color: #d46a6a;
  padding: 8rpx 18rpx;
  border-radius: 18rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: 1.5rpx solid rgba(244, 174, 186, 0.3);
}

/* ================= Empty State ================= */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #8c7b9d;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 25rpx;
  box-shadow: 0 4rpx 16rpx rgba(140, 123, 157, 0.08);
  border: 2rpx solid #f0ebf5;
  margin-top: 40rpx;
}

.empty-icon {
  font-size: 72rpx;
  display: block;
  margin-bottom: 30rpx;
  opacity: 0.7;
}

.empty-text {
  font-size: 32rpx;
  display: block;
  margin-bottom: 40rpx;
  font-weight: 500;
  color: #7d6b8f;
}

.add-button {
  background: linear-gradient(135deg, rgba(184, 167, 204, 0.9) 0%, rgba(140, 123, 157, 0.9) 100%);
  margin-left: 100rpx;
  margin-right: 100rpx;
  color: white;
  border: none;
  padding: 24rpx 48rpx;
  border-radius: 25rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(140, 123, 157, 0.2);
  transition: all 0.3s ease;
}

.add-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(140, 123, 157, 0.15);
}

/* ================= 响应式设计 ================= */
@media (max-width: 480px) {
  .container {
    padding: 30rpx 20rpx;
  }
  
  .header {
    padding: 30rpx 25rpx;
    margin-bottom: 30rpx;
  }
  
  .stats-container {
    grid-template-columns: 1fr;
    gap: 18rpx;
  }
  
  .stat-card {
    padding: 28rpx 22rpx;
  }
  
  .cycle-item, .history-item {
    padding: 25rpx 22rpx;
  }
  
  .empty-state {
    padding: 60rpx 30rpx;
  }
}

/* ================= 自定义滚动条 ================= */
::-webkit-scrollbar {
  width: 6rpx;
}

::-webkit-scrollbar-track {
  background: rgba(240, 235, 245, 0.5);
  border-radius: 10rpx;
}

::-webkit-scrollbar-thumb {
  background: rgba(184, 167, 204, 0.5);
  border-radius: 10rpx;
}

::-webkit-scrollbar-thumb:hover {
  background: rgba(184, 167, 204, 0.7);
}