<view class="page">

<!-- 主容器 -->
<view class="container">
  <!-- 顶部标题 -->
  <view class="header">
    <text class="header-title">知识库</text>
  </view>
  
  <!-- 主体内容 -->
  <view class="main">
    <!-- 功能卡片1 -->
    <view class="menu-card">
      <!-- 检索按钮 -->
      <button class="menu-btn" bindtap="goSearch">
        <image src="/images/knowledge_base_icon.png" class="icon"></image>
        <text class="label">知识检索</text>
      </button>
    </view>
    
    <!-- 功能卡片2 -->
    <view class="menu-card">
      <!-- 智能体按钮 -->
      <button class="menu-btn" bindtap="goToAgent">
        <image src="/images/AI.png" class="icon"></image>
        <text class="label">AI问答助手</text>
      </button>
    </view>
  </view>
</view>

<!-- 隐藏的导航线 -->
<view class="tab-bar-line"></view>

<!-- 底部导航栏 -->
<view class="tab-bar">
  <view class="tab-item" bindtap="switchToKnowledge">
    <text class="tab-text">知识库</text>
  </view>

  <!-- 中心按钮 -->
  <image class="tab-plus" src="/images/plus2.png" bindtap="goAdd" mode="widthFix"></image>

  <view class="tab-item" bindtap="switchToMine">
    <text class="tab-text">我的</text>
  </view>
</view>
</view>
