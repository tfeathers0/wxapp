.page {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: linear-gradient(135deg, #faf7f9 0%, #f5f2f6 100%);

}

/* 主容器 */
.container {
  flex: 1;
  padding: 60rpx 30rpx;
}

/* 顶部标题 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.header-title {
  font-size: 46rpx;
  font-weight: 600;
  color: #7d6b8f;
  letter-spacing: 2rpx;
}

/* 主体内容 */
.main {
  margin-bottom: 500rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
}

/* 功能卡片 */
.menu-card {
  width: 100%;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  padding: 45rpx;
  box-shadow: 0 4rpx 16rpx rgba(140, 123, 157, 0.08);
  border: 2rpx solid #f0ebf5;
  transition: all 0.3s ease;
}

.menu-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(140, 123, 157, 0.05);
}

/* 菜单按钮 */
.menu-btn {
  width: 100%;
  height: 140rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f5fc 100%);
  color: #8c7b9d;
  font-size: 36rpx;
  border-radius: 25rpx;
  border: 2rpx solid #e8e0ee;
  box-shadow: 0 4rpx 12rpx rgba(140, 123, 157, 0.1);
  transition: all 0.3s ease;
  
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding-left: 35rpx;
  margin-bottom: 25rpx;
}

.menu-btn:last-child {
  margin-bottom: 0;
}

.menu-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(140, 123, 157, 0.1);
  background: linear-gradient(135deg, #f8f5fc 0%, #f3eff9 100%);
}

/* 图标 */
.icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 30rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 15rpx;
  border: 2rpx solid #f0ebf5;
}

/* 标签文本 */
.label {
  color: #7d6b8f;
  font-weight: 500;
  font-size: 36rpx;
}

/* Bottom Tab Bar */
  .tab-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 150rpx;
    background: rgba(129, 152, 194, 0.95);
    display: flex;
    justify-content: space-around;
    align-items: center;
    box-shadow: 0 -4px 20px rgba(129, 152, 194, 0.15);
  }

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tab-icon {
  width: 75rpx;
  height: 75rpx;
  margin-bottom: 8rpx;
  transition: transform 0.2s ease;
}