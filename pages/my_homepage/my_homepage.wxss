page {
    background: linear-gradient(135deg, #8198c2 0%, #d792a5 100%);
  }
  

  
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center; /* vertically center */
    padding-bottom: 140rpx; /* still avoid tab bar overlap */
  }
  
  .profile {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 180rpx;
    position: relative;
  }
  
  .noavatar{
    width: 250rpx;
    height: 250rpx;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.8);
    margin-bottom: 30rpx;
    position: absolute;
    top: 150rpx;
    left: 0;
    right: 0;
    margin: 0 auto;
    border: 5rpx solid #f0ebf5;
    box-shadow: 0 8rpx 25rpx rgba(140, 123, 157, 0.15);
  }
  
  .avatar {
    width: 250rpx;
    height: 250rpx;
    border-radius: 50%;
    margin-bottom: 30rpx;
    position: absolute;
    top: -250rpx;
    left: 0;
    right: 0;
    margin: 0 auto;
    border: 5rpx solid rgba(255, 255, 255, 0.7);
    box-shadow: 0 8rpx 25rpx rgba(140, 123, 157, 0.15);
    transition: all 0.3s ease;
  }
  
  .avatar:active {
    transform: scale(1.05);
  }
  
  /* Avatar upload indicator */
  .avatar-upload {
    position: absolute;
    bottom: 35rpx;
    right: 230rpx;
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    background-color: #b8a7cc;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 40rpx;
    box-shadow: 0 4rpx 15rpx rgba(184, 167, 204, 0.3);
    transition: all 0.3s ease;
  }
  
  .avatar-upload:active {
    transform: scale(1.1);
  }
  
  .avatar-container {
    position: relative;
    margin-bottom: 50rpx;
  }
  
  .nickname {
    font-size: 56rpx;
    color: #7d6b8f;
    text-align: center;
    margin-top: 50rpx;
    font-weight: 600;
    letter-spacing: 1rpx;
  }
  
  .inp {
    width: 450rpx;
    height: 100rpx;
    text-align: center;
    font-size: 44rpx;
    color: #7d6b8f;
    border: 2rpx solid #e8e0ee;
    border-radius: 50rpx;
    margin: 60rpx auto 0;
    background-color: rgba(255, 255, 255, 0.7);
    box-shadow: 0 6rpx 20rpx rgba(140, 123, 157, 0.05);
    padding: 0 30rpx;
    transition: all 0.3s ease;
  }

  .inp:focus {
    border-color: #b8a7cc;
    box-shadow: 0 6rpx 20rpx rgba(184, 167, 204, 0.15);
  }

  .inp::placeholder {
    color: #c8bdd2;
  }

  .inp::-webkit-input-placeholder {
    color: #c8bdd2;
  }

  .inp::-moz-placeholder {
    color: #c8bdd2;
  }

  .inp:-ms-input-placeholder {
    color: #c8bdd2;
  }
  
  .info-complete {
    color: #8c7b9d;
    font-size: 26rpx;
    text-align: center;
    margin-top: 10rpx;
    opacity: 0.8;
  }
    
  .menu {
    width: 80%;
    position: relative;
    top: 100rpx;
    left: 0;
    right: 0;
    margin: 0 auto;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 25rpx;
    box-shadow: 0 4rpx 16rpx rgba(140, 123, 157, 0.08);
    border: 2rpx solid #f0ebf5;
  }
  
  .menu-item {
    text-align: center;
    font-size: 40rpx;
    color: #8c7b9d;
    padding: 45rpx 0;
    transition: all 0.3s ease;
  }

  .menu-item:active {
    background: rgba(245, 240, 250, 0.9);
    color: #b8a7cc;
  }
  
  /* Divider line */
  .menu-divider {
    height: 2rpx;
    width:90%;
    background-color: #f0ebf5;
    margin: 0 auto;
  }
  
  /* Logout button style */
  .logout-item {
    color: #c0392b;
    font-weight: bold;
  }
  
  .tab-bar-line {
    display: none;
  }
  
  /* Bottom Tab Bar */
  .tab-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 150rpx;
    background: rgba(129, 152, 194, 0.95);
    display: flex;
    justify-content: space-around;
    align-items: center;
    box-shadow: 0 -4rpx 20rpx rgba(140, 123, 157, 0.08);

  }
  
  .tab-plus {
    width: 100rpx;
    height: 100rpx;
    margin-top: 0rpx;
    justify-content: center;
    align-items: center;
    background: #ffffff;
    border-radius: 50%;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    padding: 10rpx;
  }
  
  .tab-item {
    flex: 1;
    text-align: center;
  }
  
  .tab-text {
    font-size: 40rpx;
    color: #ffffff;
    font-weight: 500;
  }