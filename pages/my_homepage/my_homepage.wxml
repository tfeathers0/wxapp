<view class="container">

  <view class="header">
    <image class="scan-icon" src="/images/scan.png" bindtap="switchToScan" mode="widthFix"></image>
  </view>

  <!-- Profile section -->
  <view class="profile" catchtap>
    <!-- Avatar -->
    <image
      class="avatar"
      src="{{userInfo.avatarUrl}}"
      bindtap="changeAvatar"
      mode="cover"
    ></image>

    <!-- Nickname input -->
    <input
      class="inp"
      type="text"
      placeholder="昵称"
      value="{{userInfo.nickName}}"
      bindinput="onInputChange"
      bindtap="stopEvent"
    ></input>

    <!-- Completion message -->
    <view wx:if="{{showComplete}}" class="info-complete">
      用户信息已设置完成
    </view>
  </view>

  <!-- Menu -->
  <view class="menu">
    <view class="menu-item" bindtap="goAbout">关于我们</view>
    <view class="menu-divider"></view>
    <view class="menu-item" bindtap="goCode">我的月亮码</view>
    <view class="menu-divider"></view>
    <view class="menu-item" bindtap="goService">联系客服</view>
    <view class="menu-divider"></view>
    <view class="menu-item logout-item" bindtap="showDeleteAccountConfirm">删除账号</view>
  </view>

  <!-- Bottom tab-bar -->
<view class="tab-bar">
 <!-- Bottom tab-bar -->
<view class="tab-bar">
  <view class="tab-item" bindtap="switchToKnowledge">
    <image class="tab-icon" src="/images/知识库.png" mode="widthFix"></image>
  </view>
  
  <view class="tab-item" bindtap="switchToHome">
    <image class="tab-icon" src="/images/home.png" mode="widthFix"></image>
  </view>
  
  <view class="tab-item" bindtap="switchToMine">
    <image class="tab-icon" src="/images/me.png" mode="widthFix"></image>
  </view>
</view>


</view>

</view>
