.container {
  width: 100%;
  height: 100vh;
  background: linear-gradient(135deg, #8198c2 0%, #d792a5 100%);
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

/* 背景装饰 */
.permission-container::before {
  content: '';
  position: absolute;
  top: -5%;
  right: -5%;
  width: 500rpx;
  height: 500rpx;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 70%);
  border-radius: 50%;
  z-index: 0;
}

.permission-container::after {
  content: '';
  position: absolute;
  bottom: -10%;
  left: -10%;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(255,255,255,0.08) 0%, rgba(255,255,255,0) 70%);
  border-radius: 50%;
  z-index: 0;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
}

.header-left, .header-right {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #8198c2 0%, #d792a5 100%);
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.header-left::before,
.header-right::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
  transition: all 0.5s ease;
}

.header-left:active::before,
.header-right:active::before {
  left: 100%;
}

.header-left:active,
.header-right:active {
  transform: scale(0.9);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.back-icon {
  width: 30rpx;
  height: 30rpx;
  border-left: 4rpx solid #666;
  border-bottom: 4rpx solid #666;
  transform: rotate(45deg);
  transition: all 0.3s ease;
  position: relative;
  z-index: 1;
}

.header-left:active .back-icon {
  transform: rotate(45deg) scale(0.9);
  border-left: 4rpx solid #333;
  border-bottom: 4rpx solid #333;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  letter-spacing: 1rpx;
}

.content {
  flex: 1;
  padding-top: 60rpx; /* reduced from 120rpx */
  padding-bottom: 20rpx; /* reduced from 40rpx */
  position: relative;
  z-index: 1;
  animation: fadeInUp 0.5s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.contact-info {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  padding: 40rpx 30rpx;
  margin: 20rpx;
  text-align: center;
  border-radius: 30rpx;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  z-index: 1;
}

.contact-info::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(255,255,255,0) 0%, rgba(249,240,255,0.2) 100%);
  pointer-events: none;
}

.contact-info:active {
  transform: translateY(2rpx);
  box-shadow: 0 3rpx 12rpx rgba(0, 0, 0, 0.05);
}

.contact-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  letter-spacing: 0.5rpx;
}

.contact-id {
  font-size: 28rpx;
  color: #999999;
  position: relative;
  z-index: 1;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.03);
}

.permission-list {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  margin: 0 20rpx 40rpx 20rpx;
  border-radius: 30rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
}

.permission-list::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(255,255,255,0) 0%, rgba(249,240,255,0.1) 100%);
  pointer-events: none;
}

.permission-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 35rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
  position: relative;
  z-index: 1;
  overflow: hidden;
}

.permission-item::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(249,240,255,0.3), transparent);
  transition: all 0.3s ease;
  pointer-events: none;
}

.permission-item:active::after {
  left: 100%;
}

.permission-item:active {
  background-color: rgba(249,240,255,0.3);
  padding-left: 45rpx;
}

.permission-item:active {
  background-color: #f8f9fa;
}

.permission-item:last-child {
  border-bottom: none;
}

.permission-text {
  flex: 1;
  margin-right: 20rpx;
  position: relative;
  z-index: 1;
}

.permission-title {
  font-size: 32rpx;
  color: #333333;
  display: block;
  margin-bottom: 6rpx;
  font-weight: 500;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.03);
  letter-spacing: 0.5rpx;
}

.permission-desc {
  font-size: 26rpx;
  color: #999999;
  display: block;
  line-height: 1.5;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.03);
}

.button-container {
  padding: 0 30rpx;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: center;
  position: relative;
  z-index: 1;
}

.save-button {
  background: linear-gradient(135deg, #8198c2 0%,rgb(255, 183, 201) 100%);
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 50rpx;
  height: 100rpx;
  line-height: 100rpx;
  width: 80%;
  box-shadow: 0 6rpx 24rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  z-index: 1;
  letter-spacing: 2rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.save-button::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent, rgba(255,255,255,0.1), transparent);
  transform: rotate(45deg);
  transition: all 0.6s ease;
}

.save-button:not([disabled]):active {
  transform: scale(0.98);
  box-shadow: 0 3rpx 12rpx rgba(102, 126, 234, 0.4);
}

.save-button:not([disabled]):active::before {
  left: 150%;
}

.save-button[disabled] {
  background-color: #d9d9d9 !important;
  color: #ffffff !important;
  box-shadow: none;
}

.tips {
  padding: 0 30rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  line-height: 1.5;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(5rpx);
  padding: 20rpx;
  margin: 0 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* switch控件样式 */
switch {
  width: 120rpx;
  height: 60rpx;
  position: relative;
  z-index: 1;
}

switch .wx-switch-input {
  width: 120rpx !important;
  height: 60rpx !important;
  border-radius: 30rpx !important;
  transition: all 0.3s ease;
}

switch .wx-switch-input::before {
  width: 118rpx !important;
  height: 58rpx !important;
  border-radius: 29rpx !important;
  background-color: #e8e8e8 !important;
  transition: all 0.3s ease;
}

switch .wx-switch-input::after {
  width: 58rpx !important;
  height: 58rpx !important;
  border-radius: 50% !important;
  background-color: #ffffff !important;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2) !important;
  transition: all 0.3s ease;
  transform: scale(0.8) !important;
}

switch[checked] .wx-switch-input::before {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
}

switch[checked] .wx-switch-input::after {
  transform: translateX(60rpx) scale(0.8) !important;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.25) !important;
}

/* 加载动画 */
@keyframes pulse {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
  100% {
    opacity: 1;
  }
}

.loading {
  animation: pulse 1.5s infinite ease-in-out;
}

switch[disabled] .wx-switch-input {
  opacity: 0.5;
}

switch:not([disabled]) {
  transform: scale(1);
  transition: transform 0.3s ease;
}

switch:not([disabled]):active {
  transform: scale(0.95);
}