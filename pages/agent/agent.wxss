/* 整体布局和背景 */
.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #faf7f9 0%, #f5f2f6 100%);
}

/* 头部样式 */
.agent-header {
  padding: 8px 16px 16px 16px; /* 减少顶部内边距 */
  background: rgba(255, 255, 255, 0.95);
  color: #7d6b8f;
  box-shadow: 0 4rpx 16rpx rgba(140, 123, 157, 0.08);
  position: relative;
  border-bottom: 2rpx solid #f0ebf5;
}

/* 导航容器 */
.nav {
  display: flex;
  align-items: center;
  padding-top: 4px; /* 调整导航容器位置 */
}

/* 返回箭头 */
.back-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.agent-title {
  font-size: 34rpx;
  font-weight: 600;
  flex: 1;
  text-align: center;
  color: #7d6b8f;
  letter-spacing: 1rpx;
}

/* 消息容器 */
.message-container {
  flex: 1;
  margin: 0 30rpx;
  overflow-y: auto;
  margin-left:20px;
  width:90%;
}

.messages {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 消息项样式 */
.message-item {
  display: flex;
  max-width: 75%;
  transition: all 0.3s ease;
}

.user-message {
  align-self: flex-end;
}

.assistant-message {
  align-self: flex-start;
}

/* 消息气泡 */
.message-bubble {
  padding: 20rpx 28rpx;
  border-radius: 36rpx;
  box-shadow: 0 2rpx 8rpx rgba(140, 123, 157, 0.05);
}

.user-message .message-bubble {
  background-color: #b8a7cc;
  color: white;
  border-bottom-right-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(184, 167, 204, 0.2);
}

.assistant-message .message-bubble {
  background-color: rgba(255, 255, 255, 0.95);
  color: #7d6b8f;
  border-bottom-left-radius: 8rpx;
  border: 2rpx solid #f0ebf5;
  box-shadow: 0 2rpx 8rpx rgba(140, 123, 157, 0.05);
}

.message-content {
  font-size: 28rpx;
  line-height: 1.5;
  white-space: pre-wrap;
  word-break: break-word;
  overflow-wrap: break-word;
}

/* 输入区域 */
.input-area {
  display: flex;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-top: 2rpx solid #f0ebf5;
}

.agent-input {
  flex: 1;
  padding: 20rpx 30rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border: 2rpx solid #e8e0ee;
  border-radius: 20rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
  color: #8c7b9d;
  box-shadow: 0 2rpx 8rpx rgba(140, 123, 157, 0.05);
  transition: all 0.3s ease;
}

.agent-input:focus {
  border-color: #b8a7cc;
  box-shadow: 0 2rpx 12rpx rgba(184, 167, 204, 0.15);
}

/* 占位符样式 */
.agent-input::placeholder {
  color: #c8bdd2;
}

.agent-input::-webkit-input-placeholder {
  color: #c8bdd2;
}

.agent-input::-moz-placeholder {
  color: #c8bdd2;
}

.agent-input:-ms-input-placeholder {
  color: #c8bdd2;
}

.send-btn {
  width: 160rpx;
  height: 80rpx;
  background-color: #b8a7cc;
  color: white;
  border-radius: 20rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(184, 167, 204, 0.2);
  transition: all 0.3s ease;
}

.send-btn:active {
  background-color: #a58fc6;
  transform: scale(0.98);
}

/* 滚动条样式 - 隐藏滚动条但保留滚动功能 */
.message-container::-webkit-scrollbar {
  display: none;
}

.message-container {
  scrollbar-width: none;
  -ms-overflow-style: none;
}

/* 思考中提示样式 */
.loading-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  color: #8c7b9d;
  font-size: 28rpx;
  opacity: 0.8;
}

.loading-text {
  position: relative;
  padding-right: 40rpx;
}

.loading-text::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid rgba(184, 167, 204, 0.3);
  border-radius: 50%;
  border-top-color: #b8a7cc;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: translateY(-50%) rotate(360deg); }
}