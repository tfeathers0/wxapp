<view class="container">
  <!-- 头部 -->
  <view class="header">
    <view class="title">记录月经情况</view>
    <view class="date-display">{{date}}</view>
  </view>
  
  <!-- 内容区域 -->
  <view class="content">
    <!-- 周期状态 -->
    <view class="section">
      <view class="section-title">
        <text class="icon">📅</text>
        <text>周期状态</text>
      </view>
      
      <view class="switch-container">
        <text class="switch-label">是否为经期第一天    </text>
        <switch checked="{{isFirstDay}}" bindchange="onFirstDayChange" color="#b8a7cc"></switch>
      </view>
      
      <view class="switch-container">
        <text class="switch-label">是否在经期中</text>
        <switch checked="{{isInPeriod}}" bindchange="onInPeriodChange" color="#b8a7cc"></switch>
      </view>
    </view>
    
    <!-- 经血量 -->
    <view class="section">
      <view class="section-title">
        <text class="icon">🩸</text>
        <text>经血量</text>
      </view>
      
      <view class="radio-group">
        <view class="radio-option" wx:for="{{bloodOptions}}" wx:key="index" data-value="{{item}}" bindtap="onBloodAmountChange">
          <view class="radio-bubble {{bloodAmount === item ? 'active' : ''}}">{{item}}</view>
        </view>
      </view>
    </view>
    
    <!-- 症状 -->
    <view class="section">
      <view class="section-title">
        <text class="icon">🤒</text>
        <text>症状</text>
      </view>
      
      <view class="symptoms-grid">
        <view class="symptom-option {{symptoms[index] === 1 ? 'active' : ''}}" 
              wx:for="{{symptomOptions}}" wx:key="index" wx:for-index="idx" 
              data-index="{{idx}}" bindtap="onSymptomToggle">
          <text class="symptom-label">{{item}}</text>
          <view class="switch-mini {{symptoms[idx] === 1 ? 'active' : ''}}"></view>
        </view>
      </view>
    </view>
    
    <!-- 心情 -->
    <view class="section">
      <view class="section-title">
        <text class="icon">😊</text>
        <text>心情</text>
      </view>
      
      <view class="mood-grid">
        <view class="mood-option {{mood === item.label ? 'active' : ''}}" 
              wx:for="{{moodOptions}}" wx:key="label" 
              data-mood="{{item.label}}" bindtap="onMoodSelect">
          <text class="mood-icon">{{item.icon}}</text>
          <text class="mood-label">{{item.label}}</text>
        </view>
      </view>
    </view>
    
    <!-- 记录 -->
    <view class="section">
      <view class="section-title">
        <text class="icon">📝</text>
        <text>记录</text>
      </view>
      
      <textarea class="textarea" placeholder="输入当天的情况..." value="{{note}}" bindinput="onNoteInput" />
    </view>
    
    <!-- 保存按钮 -->
    <button class="save-btn {{isSaving ? 'saving' : ''}}" bindtap="saveRecord" disabled="{{isSaving}}">
      {{isSaving ? '保存中...' : '保存记录'}}
    </button>
  </view>
</view>