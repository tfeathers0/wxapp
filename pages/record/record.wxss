/* ================= Container ================= */
.container {
  background: linear-gradient(135deg, #faf7f9 0%, #f5f2f6 100%);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  margin-left: 0rpx;
  margin-right: 0rpx;
}

/* ================= Header ================= */
.header {
  background: rgba(255, 255, 255, 0.95);
  padding: 5rpx 0rpx;
  text-align: center;
  border-radius: 25rpx;
  margin-bottom: 35rpx;
  box-shadow: 0 4rpx 16rpx rgba(140, 123, 157, 0.08);
  border: 2rpx solid #f0ebf5;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #7d6b8f;
  margin-bottom: 15rpx;
  letter-spacing: 0.5rpx;
}

.date-display {
  font-size: 30rpx;
  color: #8c7b9d;
  font-weight: 500;
  opacity: 0.9;
}

/* ================= Content ================= */
.content {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 25rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(140, 123, 157, 0.08);
  border: 2rpx solid #f0ebf5;
  flex: 1;
  margin: 0 0rpx; /* 原来 0 10rpx，改为贴近父容器 */
}

/* ================= Section ================= */
.section {
  margin-left: 50rpx;
  margin-right: 50rpx;
  margin-bottom: 45rpx;
  padding-bottom: 40rpx;
  border-bottom: 2rpx solid rgba(140, 123, 157, 0.08);
}

.section:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #7d6b8f;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  letter-spacing: 0.5rpx;
}

.section-title .icon {
  margin-right: 16rpx;
  font-size: 34rpx;
}

/* ================= Switch Container ================= */
.switch-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 22rpx 25rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 18rpx;
  margin-bottom: 12rpx;
  border: 1.5rpx solid #f0ebf5;
}

.switch-label {
  font-size: 30rpx;
  color: #7d6b8f;
  font-weight: 500;
}

/* ================= Radio Group ================= */
.radio-group {
  display: flex;
  justify-content: space-between;
  margin-top: 25rpx;
  gap: 15rpx;
}

.radio-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.radio-bubble {
  width: 100%;
  height: 75rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.9);
  color: #8c7b9d;
  font-size: 28rpx;
  font-weight: 500;
  border: 2rpx solid #f0ebf5;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(140, 123, 157, 0.05);
}

.radio-bubble.active {
  background: rgba(184, 167, 204, 0.15);
  border-color: #b8a7cc;
  color: #7d6b8f;
  box-shadow: 0 4rpx 12rpx rgba(184, 167, 204, 0.15);
}

/* ================= Symptoms Grid ================= */
.symptoms-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 18rpx;
  margin-top: 25rpx;
}

.symptom-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 22rpx 25rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 18rpx;
  border: 2rpx solid #f0ebf5;
  transition: all 0.3s ease;
}

.symptom-option.active {
  background: rgba(184, 167, 204, 0.12);
  border-color: #b8a7cc;
}

.symptom-label {
  font-size: 28rpx;
  color: #7d6b8f;
  font-weight: 500;
}

.switch-mini {
  width: 75rpx;
  height: 38rpx;
  border-radius: 38rpx;
  background: #f0ebf5;
  position: relative;
  transition: all 0.3s ease;
}

.switch-mini::after {
  content: "";
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: white;
  top: 3rpx;
  left: 3rpx;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.switch-mini.active {
  background: rgba(184, 167, 204, 0.5);
}

.switch-mini.active::after {
  left: 40rpx;
  background: #b8a7cc;
}

/* ================= Mood Grid ================= */
.mood-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 18rpx;
  margin-top: 25rpx;
}

.mood-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 25rpx 15rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 18rpx;
  border: 2rpx solid #f0ebf5;
  transition: all 0.3s ease;
}

.mood-option.active {
  background: rgba(244, 174, 186, 0.12);
  border-color: #f4aeba;
  transform: scale(1.02);
}

.mood-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.mood-label {
  font-size: 24rpx;
  color: #7d6b8f;
  font-weight: 500;
}

/* ================= Textarea ================= */
.textarea {
  width: 100%;
  height: 220rpx;
  padding: 25rpx;
  border: 2rpx solid #f0ebf5;
  border-radius: 18rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  color: #7d6b8f;
  box-sizing: border-box;
}

.textarea:focus {
  border-color: #b8a7cc;
  outline: none;
}

.textarea::placeholder {
  color: #b8a7cc;
  opacity: 0.6;
}

/* ================= Save Button ================= */
.save-btn {
  background: linear-gradient(135deg, rgba(184, 167, 204, 0.9) 0%, rgba(140, 123, 157, 0.9) 100%);
  color: white;
  border: none;
  padding: 30rpx;
  border-radius: 25rpx;
  width: 100%;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 45rpx;
  transition: all 0.3s ease;
  box-shadow: 0 6rpx 20rpx rgba(140, 123, 157, 0.2);
  letter-spacing: 1rpx;
}

.save-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(140, 123, 157, 0.15);
}

.save-btn.saving {
  background: linear-gradient(135deg, rgba(200, 200, 200, 0.7) 0%, rgba(180, 180, 180, 0.7) 100%);
}

/* ================= 响应式设计 ================= */
@media (max-width: 480px) {
  .container {
    padding: 25rpx 15rpx; /* 进一步减少padding让容器更宽 */
  }
  
  .header {
    padding: 30rpx 25rpx;
    margin-bottom: 30rpx;
  }
  
  .content {
    padding: 30rpx 25rpx;
    margin: 0 5rpx; /* 减少margin让内容更宽 */
  }
  
  .symptoms-grid {
    grid-template-columns: 1fr;
  }
  
  .mood-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .radio-group {
    flex-direction: column;
    gap: 18rpx;
  }
  
  .radio-option {
    width: 100%;
  }
  
  .section {
    margin-bottom: 40rpx;
    padding-bottom: 35rpx;
  }
}