/* 月伴主题 - 柔和静谧风格 */
.info-container {
  width: 100%;
  min-height: 120vh; /* 增加最小高度到120%视口高度 */
  background: linear-gradient(135deg, #8198c2 0%, #d792a5 100%);
  position: relative;
  overflow: hidden;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding-bottom: 100rpx; /* 添加底部 padding 增加页面长度 */
}

/* ======== 自定义日历样式 ======== */
.calendar-section {
  width: 90%;
  max-width: 400px;
  margin: 20rpx auto;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(8px);
  border-radius: 20rpx;
  padding: 30rpx;
  border: 2px solid rgba(165, 205, 215, 0.2);
  box-shadow: 0 6px 20px rgba(129, 152, 194, 0.12);
}

/* 日历头部 */
.custom-calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

.month-btn {
  background: rgba(255, 255, 255, 0.9);
  color: #8c7b9d;
  border: 2rpx solid #e8e0ee;
  border-radius: 20rpx;
  padding: 16rpx 30rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(140, 123, 157, 0.1);
  transition: all 0.3s ease;
}

.month-btn:active {
  background: rgba(245, 240, 250, 0.9);
  transform: scale(0.98);
}

.custom-calendar-header text {
  font-size: 34rpx;
  font-weight: 600;
  color: #7d6b8f;
  letter-spacing: 1rpx;
}

/* 星期标题 */
.custom-calendar-week {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  text-align: center;
  margin-bottom: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 25rpx;
  padding: 22rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(140, 123, 157, 0.08);
  border: 2rpx solid #f0ebf5;
}

.custom-calendar-week text {
  color: #8c7b9d;
  font-size: 28rpx;
  font-weight: 500;
}

/* 日期格子 */
.custom-calendar-days {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  text-align: center;
  gap: 12rpx;
  margin-bottom: 30rpx;
}

.custom-calendar-day {
  width: 84rpx;
  height: 84rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  margin: 4rpx auto;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.95);
  border: 2rpx solid #f0ebf5;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(140, 123, 157, 0.05);
}

.custom-calendar-day text {
  color: #7d6b8f;
  font-size: 30rpx;
  font-weight: 500;
}

.custom-calendar-day:active {
  background: rgba(250, 248, 252, 0.95);
  transform: scale(0.95);
}

/* 生理期样式 */
.custom-calendar-day.period {
  border: 2.5rpx solid #b8a7cc;
  background: rgba(184, 167, 204, 0.12);
  box-shadow: 0 2rpx 10rpx rgba(184, 167, 204, 0.15);
}

/* 排卵日样式 */
.custom-calendar-day.ovulation {
  border: 2.5rpx solid #77c8a6;
  background: rgba(119, 200, 166, 0.12);
  box-shadow: 0 2rpx 10rpx rgba(119, 200, 166, 0.15);
}


/* 图例样式 */
.custom-calendar-legend {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  margin-top: 20rpx;
  padding: 15rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 15rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  margin: 10rpx 15rpx;
}

.dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.dot.ovulation {
  background: #77c8a6;
}

.dot.period {
  background: #b8a7cc;
}

.dot.recorded {
  background: #ffab91;
}

.legend-item text {
  color: #7d6b8f;
  font-size: 26rpx;
}


/* 柔和光晕效果 */
.soft-glow {
  position: absolute;
  border-radius: 50%;
  filter: blur(60rpx);
  opacity: 0.3;
  z-index: 0;
}

.top-left-glow {
  top: -200rpx;
  left: -200rpx;
  width: 600rpx;
  height: 600rpx;
  background-color: #8198c2;
}

.bottom-right-glow {
  bottom: -200rpx;
  right: -200rpx;
  width: 600rpx;
  height: 600rpx;
  background-color: #d792a5;
}

/* 顶部信息栏 */
.header-section {
  display: flex;
  align-items: center;
  height:100px;
  width: 100%; /* 将宽度改为响应式，占屏幕90% */
  max-width: 400px;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(8px);
  margin: 40rpx auto;
  border: 2px solid rgba(165, 205, 215, 0.2);
  box-shadow: 0 6px 20px rgba(129, 152, 194, 0.12), 0 3px 8px rgba(0, 0, 0, 0.05);
  position: relative;
  z-index: 1;
  overflow: hidden;
  transform: translateY(0);
  transition: all 0.3s ease;
  animation: fadeInUp 0.5s ease-out;
}

.header-section:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.03);
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-right: 50rpx;
  margin-left:50rpx;
  border: 5rpx solid #fff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.avatar:active {
  transform: scale(1.05);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.15);
}

.state {
  width: 80rpx;
  height: 80rpx;
  margin-right: 50rpx;
}

.user-info {
  flex-grow: 1;
  position: relative;
  z-index: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
  letter-spacing: 0.5rpx;
  background: linear-gradient(90deg, #8198c2 0%, #a5cdd7 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.relation {
  font-size: 28rpx;
  color: #7d6b8f;
}

/* 增加底部占位元素，确保页面足够长 */
.bottom-placeholder {
  height: 150rpx;
  width: 100%;
}

/* 通用区域标题 */
.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #7d6b8f;
  width: 85%; /* 将宽度改为响应式 */
  max-width: 350px;
  height:40px;
  margin: 20rpx auto 0 auto;
  border-radius: 20rpx 20rpx 0 0;
  position: relative;
  z-index: 1;
  transition: all 0.3s ease;
  overflow: hidden;
  letter-spacing: 0.5rpx;
  display: flex;
  align-items: center;
}

.section-title::after {

  content: '';
  position: absolute;
  bottom: 0;
  left: 30rpx;
  width: 40rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #8198c2 0%, #d792a5 100%);
  border-radius: 2rpx;
}

/* 日历组件样式 */
.calendar-section{
  width: 90%; /* 将宽度改为响应式 */
  max-width: 400px;
  backdrop-filter: blur(8px);
  margin: 30rpx auto;
  border: 2px solid rgba(165, 205, 215, 0.2);
  border-top: none;
  box-shadow: 0 6px 20px rgba(129, 152, 194, 0.12), 0 3px 8px rgba(0, 0, 0, 0.05);
  overflow: hidden;
  position: relative;
  z-index: 1;
  transition: all 0.3s ease;
  animation: fadeInUp 0.7s ease-out 0.3s both;
}

.calendar-section:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.03);
}

.custom-calendar {
  padding: 0 30rpx 30rpx;
}

/* 授权信息区域 */
.authorized-info {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(0);
  margin: 15rpx auto;
  width: 100%; /* 将宽度改为响应式 */
  max-width: 400px;
  border-radius: 10px;
  border: 2px solid rgba(165, 100, 215, 0.1);
  border-top: none;
  box-shadow: none;
  position: relative;
  transition: all 0.3s ease;
  overflow: hidden;
  animation: fadeInUp 0.8s ease-out 0.4s both;
}

.authorized-info:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.03);
}

/* 信息项 */
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  height:40px;
  width:80%;
  margin: 0 auto;
}

.info-item:last-child {
  border-bottom: none;
}

.info-item::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(255,255,255,0) 0%, rgba(249,240,255,0.3) 100%);
  pointer-events: none;
  opacity: 0;
  transition: all 0.3s ease;
}

.info-item:active {
  background-color: #f8f9fa;
  padding-left: 40rpx;
}

.info-item:active::after {
  opacity: 1;
}

.info-label {
  font-size: 28rpx;
  color: #7d6b8f;
  font-weight: 500;
  min-width: 120rpx;
  position: relative;
  z-index: 1;
}

.info-value {
  font-size: 28rpx;
  color: #7d6b8f;
  text-align: right;
  flex: 1;
  padding-left: 30rpx;
  font-weight: 500;
  word-break: break-all;
  position: relative;
  z-index: 1;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.03);
}

/* 日历图例 */
.legend {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  flex-wrap: wrap;
}

.legend-item {
  display: flex;
  align-items: center;
  margin: 10rpx 15rpx;
  position: relative;
  z-index: 1;
}

.legend-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.legend-text {
  font-size: 24rpx;
  color: #666;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.03);
}

/* 权限提示样式 */
.permission-tip {
  background-color: #fff3e0;
  padding: 20rpx 30rpx;
  margin-top: 10rpx;
  text-align: center;
}

.tip-text {
  font-size: 26rpx;
  color: #f57c00;
}

/* TIPs区域样式 */
.tips-section {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(8px);
  margin: 30rpx auto;
  width: 100%; /* 将宽度改为响应式 */
  max-width: 400px;
  border-radius: 10px;
  border: 2px solid rgba(165, 100, 215, 0.2);
  box-shadow: 0 6px 20px rgba(156, 112, 199, 0.12), 0 3px 8px rgba(0, 0, 0, 0.05);
  position: relative;
  transition: all 0.3s ease;
  overflow: hidden;
  animation: fadeInUp 0.9s ease-out 0.5s both;
}

.tips-section:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.03);
}

.tip-item {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  height:85px;
  width:85%;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  margin: 0 auto;
}

.tip-item:last-child {
  border-bottom: none;
}

.tip-item::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(255,255,255,0) 0%, rgba(249,240,255,0.3) 100%);
  pointer-events: none;
  opacity: 0;
  transition: all 0.3s ease;
}

.tip-item:active {
  background-color: #f8f9fa;
  padding-left: 40rpx;
}

.tip-item:active::after {
  opacity: 1;
}

.tip-label {
  font-size: 28rpx;
  color: #7d6b8f;
  font-weight: 500;
  margin-bottom: 25rpx;
  position: relative;
  z-index: 1;
}

.tip-content {
  font-size: 28rpx;
  color: #7d6b8f;
  line-height: 2.0;
  position: relative;
  z-index: 1;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.03);
  word-break: break-all;
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(10px);
    box-shadow: 0 0 0 rgba(129, 152, 194, 0);
  }
  to {
    opacity: 1;
    transform: translateY(0);
    box-shadow: 0 6px 20px rgba(129, 152, 194, 0.12), 0 3px 8px rgba(0, 0, 0, 0.05);
  }
}
    