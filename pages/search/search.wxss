/* pages/search/search.wxss */

 .page {
    display: flex;
    flex-direction: column;
    height: 100vh;
    background: linear-gradient(135deg, #8198c2 0%, #d792a5 100%);
  }

/* 顶部栏背景 */
.header {
  width: 100%;
  background: rgb(255, 255, 255, 0);
  padding: 40rpx 0;
}

.nav {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

/* 返回箭头 */
.back-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

/* 搜索输入框容器 */
.search-input-container {
  flex: 1;
  position: relative;
  margin-right: 20rpx;
}

/* 搜索框 */
.search-input {
  width: 100%;
  height: 70rpx;
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 10rpx;
  padding: 0 70rpx 0 20rpx;
  font-size: 32rpx;
  color: #8198c2;
  border: 1px solid rgba(129, 152, 194, 0.2);
  box-sizing: border-box;
}

/* 清除搜索按钮 */
.clear-icon {
  position: absolute;
  right: 15rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 30rpx;
  height: 20rpx;
  opacity: 0.6;
}

/* 搜索按钮 */
.search-btn {
  font-size: 32rpx;
  color: #ffffff;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  font-weight: 500;
}

/* 上传按钮 */
.upload-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  opacity: 0.8;
}

/* 标签筛选区域 */
.tags-section {
  padding: 20rpx;
  background-color: rgba(255, 255, 255, 0.2);
  margin: 20rpx;
  border-radius: 15rpx;
}

/* 区域标题 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
}

/* 清除标签按钮 */
.clear-tags-btn {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  padding: 5rpx 15rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 10rpx;
}

/* 标签列表 */
.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

/* 标签样式 */
.tag {
  padding: 10rpx 20rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #ffffff;
  margin-bottom: 10rpx;
  border: 1px solid rgba(255, 255, 255, 0.2);
}

/* 选中的标签 */
.tag-selected {
  background-color: rgba(255, 255, 255, 0.6);
  color: #8198c2;
  border: 1px solid rgba(255, 255, 255, 0.8);
}

/* 暂无标签文本 */
.no-tags-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  padding: 20rpx;
}

/* 已选标签区域 */
.selected-tags {
  margin-top: 15rpx;
  padding-top: 15rpx;
  border-top: 1px solid rgba(255, 255, 255, 0.2);
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 10rpx;
}

/* 已选标签标签 */
.selected-tags-label {
  font-size: 28rpx;
  color: #ffffff;
}

/* 已选标签项 */
.selected-tag-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 5rpx 10rpx;
  background-color: rgba(255, 255, 255, 0.4);
  border-radius: 15rpx;
  font-size: 26rpx;
  color: #8198c2;
}

/* 移除标签按钮 */
.remove-tag-btn {
  font-size: 32rpx;
  line-height: 1;
  color: rgba(129, 152, 194, 0.7);
}

/* 搜索结果提示信息 */
.search-result-info {
  padding: 20rpx;
  margin: 0 20rpx 20rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 15rpx;
  font-size: 28rpx;
  color: #ffffff;
  text-align: center;
}

/* 主体内容 */
.main {
  flex: 1;
  overflow-y: auto;
  padding-bottom: 20rpx;
}

/* 高亮文本样式 */
.highlight-text {
  color: #ff6b6b;
  font-weight: bold;
  background-color: rgba(255, 107, 107, 0.1);
  padding: 0 2rpx;
  border-radius: 4rpx;
}

/* 搜索结果区域 */
.results-section {
  padding: 0 20rpx;
}

/* 加载中显示 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

/* 加载动画 */
.loading-spinner {
  width: 50rpx;
  height: 50rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 加载文本 */
.loading-text {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 文档项 */
.doc-item {
  background-color: rgba(255, 255, 255, 0);
  border-radius: 15rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s;
}

.doc-item:active {
  background-color: rgba(255, 255, 255, 0.4);
  transform: scale(0.98);
}

/* 文档内容预览 */
.doc-content-preview {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 15rpx;
}

/* 文档内容区块 */
.doc-content-section {
  margin: 16rpx 0;
}

/* 内容标签 */
.content-label {
  font-size: 24rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 0.9);
  display: block;
  margin-bottom: 8rpx;
}

/* 段落样式 */
.paragraph {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.6;
  padding: 12rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

/* 最后一段不要底边框 */
.paragraph:last-child {
  border-bottom: none;
}

/* 文档元信息 */
.doc-meta {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

/* 文档标签 */
.doc-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  flex: 1;
}

.doc-tag {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  background-color: rgba(255, 255, 255, 0.2);
  padding: 2rpx 10rpx;
  border-radius: 10rpx;
}

/* 无标签提示 */
.no-tags {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* 文档日期 */
.doc-date {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-left: 10rpx;
  white-space: nowrap;
}

/* 无结果显示 */
.no-results {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  text-align: center;
}

/* 无结果文本 */
.no-results-text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 30rpx;
}

/* 上传提示按钮 */
.upload-hint-btn {
  background-color: rgba(255, 255, 255, 0.3);
  color: #ffffff;
  border: 1px solid rgba(255, 255, 255, 0.5);
}

/* 加载更多 */
.load-more {
  padding: 20rpx 0;
  display: flex;
  justify-content: center;
}

/* 加载更多按钮 */
.load-more-btn {
  background-color: rgba(255, 255, 255, 0.3);
  color: #ffffff;
  border: 1px solid rgba(255, 255, 255, 0.5);
}

/* 匹配段落区域样式 - 统一优化版，适配深色主题 */
.matching-paragraphs-section {
  margin-top: 20rpx;
  padding-top: 20rpx;
}

.matching-paragraphs-section::before {
  content: "搜索结果";
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 15rpx;
}

.matching-paragraph {
  background-color: rgba(255, 255, 255, 0.2);
  padding: 16rpx 20rpx;
  margin-bottom: 16rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  line-height: 1.6;
  color: rgba(255, 255, 255, 0.9);
  overflow-wrap: break-word;
  border-left: 4rpx solidrgb(255, 255, 255);
}

/* 关键词高亮样式 - 增强版，在深色主题下更醒目 */
.keyword-highlight {
  color: #fff;
  font-weight: bold;
  background-color: #ff6b6b;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
  margin: 0 2rpx;
}



  