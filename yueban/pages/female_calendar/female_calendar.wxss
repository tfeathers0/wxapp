/* ================= Calendar Container ================= */
.calendar {
  padding: 20rpx;
  background-color: #fff9f5;
}

/* ================= Header ================= */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.month-btn {
  background-color: #dcb8ba;
  color: #ffffff;
  border: none;
  border-radius: 8px;
  padding: 6px 12px;
}

/* ================= Weekdays ================= */
.week {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  text-align: center;
  font-weight: bold;
  margin-bottom: 10rpx;
}

/* ================= Days Grid ================= */
.days {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  text-align: center;
  position: relative;
}

.day {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

/* Period days */
.day.period {
  border: 3rpx solid #8198c2;
  border-radius: 50%;
}


/* Ovulation day - small pink circle above date */
.day.ovulation::after {
  content: '';
  position: absolute;
  top: 6rpx; /* above the number */
  left: 50%;
  transform: translateX(-50%);
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #d792a5;
  z-index: 5;
}

/* Recorded days - light blue background */
.day.recorded {
  background-color: #daeaf6;
  border-radius: 50%;
}

/* Support combinations */

/* Period + Recorded */
.day.period.recorded {
  border: 3rpx solid #8198c2;
  background-color: #daeaf6;
}

/* First-period + Recorded */
.day.first-period.recorded {
  position: relative;
  background-color: #daeaf6;
}

/* Ovulation + Recorded or Period + Ovulation + Recorded */
.day.first-period.ovulation::after,
.day.first-period.recorded.ovulation::after,
.day.period.ovulation.recorded::after {
  top: 6rpx;
  width: 16rpx;
  height: 16rpx;
  background-color: #d792a5;
  z-index: 5;
}

/* ================= Legend ================= */
.legend {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.legend-item {
  display: flex;
  align-items: center;
}

.dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.dot.ovulation {
  border: 3rpx solid #d792a5;
}

.dot.period {
  border: 3rpx solid #8198c2;
}

.dot.recorded {
  background-color: #daeaf6;
}

/* ================= Cycle Info Display ================= */
.cycle-info-display {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: 30rpx 0;
}

.info-card {
  width: 48%;
  background-color: #f8e6e7;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.info-title {
  font-size: 28rpx;
  color: #8198c2;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.info-value {
  font-size: 32rpx;
  color: #d792a5;
  font-weight: bold;
}

/* ================= Red Box ================= */
.red-box {
  margin-top: 30rpx;
  padding: 20rpx;
  border: 2rpx solid #dcb8ba;
  border-radius: 12rpx;
  color: #dcb8ba;
}

.red-box .row {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker {
  color: #dcb8ba;
  margin-left: 10rpx;
}

.input {
  border: 1rpx solid #dcb8ba;
  padding: 5rpx 10rpx;
  width: 100rpx;
  text-align: center;
  margin-left: 10rpx;
  border-radius: 6rpx;
}

.history-btn {
  background-color: #dcb8ba;
  color: #fff;
  padding: 6rpx 12rpx;
  border: none;
  border-radius: 6rpx;
  cursor: pointer;
}

/* ================= Record Box ================= */
.record-box {
  margin-top: 30rpx;
  padding: 20rpx;
  border: 2rpx solid #dcb8ba;
  border-radius: 12rpx;
  background-color: #fff9f5;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.08);
}

.record-title {
  font-weight: bold;
  color: #dcb8ba;
  margin-bottom: 15rpx;
  font-size: 30rpx;
}

.record-row {
  margin-bottom: 12rpx;
  color: #555;
  font-size: 28rpx;
}
